<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            >
        <ImageView
                android:id="@+event/logo"
                android:layout_width="120px"
                android:layout_height="120px"
                android:padding="20dp"
                android:layout_gravity="center_horizontal"
                />
        <ImageView
                android:src="@android:drawable/divider_horizontal_bright"
                style="@style/LineDivisor"
                />
        <TextView
                android:id="@+event/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EventDetail_FontRed"
                />
        <TextView
                android:id="@+event/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/EventDetail_FontWhite"
                />
        <ImageView
                android:src="@android:drawable/divider_horizontal_bright"
                style="@style/LineDivisor"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_label_date"
                    style="@style/EventDetail_FontRed"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+event/date"
                    style="@style/EventDetail_FontWhite"
                    />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_label_url"
                    style="@style/EventDetail_FontRed"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+event/url"
                    style="@style/EventDetail_FontWhite"
                    />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_label_twitter"
                    style="@style/EventDetail_FontRed"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+event/twitter"
                    style="@style/EventDetail_FontWhite"
                    />
        </LinearLayout>
        <ImageView
                android:src="@android:drawable/divider_horizontal_bright"
                style="@style/LineDivisor"
                />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/event_label_organizer"
                    style="@style/EventDetail_FontRed"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+event/organizer"
                    style="@style/EventDetail_FontWhite"
                    />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
